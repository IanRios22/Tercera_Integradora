<h2 class="mb-4">Entrar</h2>
<div class="card p-4 mx-auto">
  <h3>Login</h3>
  {{#if session.current}}
  <p>Tu ya estas Logueado {{session.name}}</p>
  <button class="btn btn-danger" id="logout">Logout</button>
  <script src="/js/logout.js"></script>
  {{else}}
  <form id="loginForm">
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email">
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
  </form>
  <p class="mt-3">Are you not registered? <a href="/register">Register Here</a></p>
  {{/if}}
</div>

<a href="/api/sessions/github" class="btn btn-secondary mt-4">Authenticate with GitHub</a>
<a href="http://localhost:8080/" class="btn btn-secondary mt-4">Home</a>
<script src="/js/login.js"></script>